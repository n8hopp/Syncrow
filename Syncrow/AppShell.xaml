<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Syncrow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Syncrow"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

       <Tab Title="Calendar" Icon="crow_solid">

            <ShellContent
                Title="Calendar"
                ContentTemplate="{DataTemplate local:CalendarPage}"
                Route="CalendarPage" />

       </Tab>

        <Tab Title="Tasks" Icon="list_check_solid">

            <ShellContent
                Title="Tasks"
                ContentTemplate="{DataTemplate local:TaskPage}"
                Route="TaskPage" />

       </Tab>

        <Tab Title="Alarm" Icon="clock_solid">

            <ShellContent
                Title="Alarm"
                ContentTemplate="{DataTemplate local:AlarmPage}"
                Route="AlarmPage" />

        </Tab>
        

        
    </TabBar>
</Shell>
